<div class="container body-content">
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="pull-left">
                <h3> Jefes de Unidad</h3>
            </div>
            <div class="pull-right hidden-xs">
                <h4 class="text-right">
                    <span class="glyphicon glyphicon-user"></span>
                    @Session["apPaterno"] @Session["apMaterno"] @Session["nombres"]
                    <p><a href="@Url.Action("LogOut","Login")">Cerrar Sesión</a></p>

                </h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">

                    <p>
                        @Html.ActionLink("Crear nuevo", "Create")
                    </p>
                    <div class="table-responsive">
                        <table class="table" >
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.cip)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.grado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.apPaterno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.apMaterno)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.nombres)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.celularP)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cip)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.grado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.apPaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.apMaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nombres)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.celularP)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { id = item.idJefe }) |
                                        @Html.ActionLink("Detalles", "Details", new { id = item.idJefe }) |
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.idJefe })
                                    </td>
                                </tr>
                            }
                            
                        </table>
                        <ul id="pagination-demo" class="pagination-sm"></ul>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

